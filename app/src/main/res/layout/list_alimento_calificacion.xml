<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sombra_small"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sombra_small"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/foto_personaje"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:src="@drawable/personaje1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nombre_personaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PapÃ¡" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="25dp">

                <LinearLayout
                    android:id="@+id/lleno_"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/recomendaciones"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:layout_gravity="right"
                        android:background="@drawable/back_resul_alimentos"
                        android:padding="5dp"
                        android:text="0"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vacio_"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"></LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#DFDFDF"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lleno"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="3"
                    android:background="#FBBF2D"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/vacio"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="2"
                    android:background="#DFDFDF"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>