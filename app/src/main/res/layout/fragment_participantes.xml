<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/pasar1"
    tools:context="arrunchez.baumsoft.con.lafamiliaarrunchez.fragmentos.lavado_dientes">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/todos" />

    <ImageView
        android:id="@+id/per1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="18dp"
        android:src="@drawable/demo"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/per5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/per2"
        android:src="@drawable/demo"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/per2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="58dp"
        android:src="@drawable/demo"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/per3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignEnd="@+id/per2"
        android:layout_alignRight="@+id/per2"
        android:layout_alignTop="@+id/per4"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/demo"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/per4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/per5"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/demo"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="Personaje1"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/per3"
        android:layout_alignRight="@+id/per3"
        android:layout_below="@+id/per5"
        android:text="Personaje 2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/per3"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Personaje 3"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/per5"
        android:layout_alignRight="@+id/per5"
        android:layout_below="@+id/per4"
        android:text="Personaje 4"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/per4"
        android:layout_alignStart="@+id/per4"
        android:layout_below="@+id/per5"
        android:text="Personaje 5"
        android:visibility="invisible" />


</RelativeLayout>
