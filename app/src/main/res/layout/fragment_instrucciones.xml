<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arrunchez.baumsoft.con.lafamiliaarrunchez.fragmentos.instrucciones">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/instrucciones_uno"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/instrucciones_dos"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/instrucciones_tres"
                android:layout_height="wrap_content" />

            <!--
            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ciclo"
                android:layout_height="wrap_content" />
                -->

        </LinearLayout>

    </ScrollView>



</LinearLayout>
